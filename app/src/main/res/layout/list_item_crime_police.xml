<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/crime_title_for_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crime_tittle"
        android:layout_gravity="center|left"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/crime_date_for_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:text="@string/crime_date"/>

    <Button
        android:id="@+id/button_call_police"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:text="@string/button_call_the_police" />


</LinearLayout>